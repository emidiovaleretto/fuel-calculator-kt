<!-- res/drawable/two_color_background.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Bottom color -->
    <item android:width="1000dp" android:height="1000dp">
        <rotate
            android:fromDegrees="0"
            android:pivotX="-50%"
            android:pivotY="20%">
            <shape android:shape="rectangle">
                <solid android:color="@color/primary_900" /> <!-- Bottom color -->
            </shape>
        </rotate>
    </item>
    <!-- Top color -->
    <item android:width="1000dp" android:height="1000dp">
        <rotate
            android:fromDegrees="45"
            android:pivotX="5%"
            android:pivotY="-35%">
            <shape android:shape="rectangle">
                <solid android:color="@color/primary_300" /> <!-- Top color -->
            </shape>
        </rotate>
    </item>
</layer-list>
